<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_landscape">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTime"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/two_numbers_frame"
        android:elevation="5dp"
        android:gravity="center"
        android:fontFamily="@font/fofo"
        android:text="60"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imgEndGame"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:background="@drawable/time_text"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/restartgame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <TextView
        android:id="@+id/textScoreGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:shadowColor="#000000"
        android:shadowRadius="3"
        android:text="0"
        android:fontFamily="@font/fofo"
        android:textColor="#FFF9F9"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restartgame"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btn_1"
        android:gravity="center"
        android:text="RESTART"
        android:fontFamily="@font/fofo"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textScoreGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frz_eff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ice_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>
